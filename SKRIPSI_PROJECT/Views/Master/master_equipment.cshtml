                confirmButtonText: "Ya, Simpan!",
                cancelButtonText: "Tidak, Batalkan Proses!",
                showLoaderOnConfirm: true,
                closeOnConfirm: false,
                closeOnCancel: false
            }, function (isConfirm) {
                if (isConfirm) {

                    App.blockUI({
                        boxed: true
                    });

                    saveequipment();

                } else {
