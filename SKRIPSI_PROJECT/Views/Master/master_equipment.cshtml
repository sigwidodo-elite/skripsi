        /* SAVE MASTER equipment */
        function saveequipment() {

            var eq = new FormData();
            eq.append('m_tag_no', $('#txtTagNo').val());
            eq.append('m_area', $('#txtArea').val());
            eq.append('m_manufacture', $('#txtManufacture').val());
            eq.append('m_capacity', $('#txtCapacity').val());
            eq.append('m_fla', $('#txtFla').val());
            eq.append('m_rpm', $('#txtRpm').val());
            eq.append('m_volt', $('#txtVolt').val());
            eq.append('m_frame', $('#txtFrame').val());
            eq.append('m_bearing_de', $('#txtDe').val());
            eq.append('m_bearing_nde', $('#txtNde').val());
            eq.append('m_wiring_de', $('#txtWiring').val());
            eq.append('status', 'ACTIVE');
            eq.append("m_equip_id", $('#txtequipmentid').val());

            // DO POST
            $.ajax({
                type: "POST",
                url: "/master/saveequipment",
                data: eq,
                contentType: false,
                processData: false,
                success: function (result) {
                    App.unblockUI();
                    $('#form_master_equipment')[0].reset();
                    $('#txtequipmentid').val('');
                    $('#form_master_equipment .form-control').val('');
                    $('.has-error').removeClass('has-error');
                    $('.fa-warning').removeClass('fa-warning');
                    $('.has-success').removeClass('has-success');
                    $('.fa-check').removeClass('fa-check');
                    $('.alert-danger').hide();
                    $('#modal-master-equipment').modal('hide');
                    if (result == "timeout") {
                        swal({
                            title: "Session Habis!",
                            text: "Waktu Session Login Anda Berakhir",
                            type: "warning"
                        }, function () {
                            window.location.href = "/home/signout"
                        });
                    }
                    if (result == true) {
                        swal({
                            title: "Berhasil!",
                            text: "Data Berhasil Disimpan",
                            type: "success"
                        }, function () {
                            initData();
                        });
                    }
                    if (result == false) {
                        swal({
                            title: "Gagal!",
                            text: "Ada Kesalahan Penyimpanan Data",
                            type: "warning"
                        }, function () {
                            initData();
                        });
                    }

                    console.log(result);

                },
                error: function (e) {
                    App.unblockUI();
                    swal("Error!", "Periksa Kembali Koneksi Anda", "error");
                    console.log("ERROR: ", e);
                }
            });

        }



