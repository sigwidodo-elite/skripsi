<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PROFILE CONTENT -->
        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light bordered">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject bold uppercase font-dark">Data Material</span>
                            </div>
                            <div class="actions">
                                <div class="btn-group-devided" data-toggle="buttons">
                                    <button style="margin-right: 10px;" id="btn-add-material-modal" class="btn bg-red-thunderbird bg-font-red-thunderbird">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-hover table-bordered" id="table_material">
                                <thead>
                                    <tr class="bg-red-thunderbird bg-font-red-thunderbird">
                                        <th style="display:none;"> id </th>
                                        <th> NAMA MATERIAL </th>
                                        <th> KODE MATERIAL </th>
                                        <th> TIPE MATERIAL </th>
                                        <th> BAHAN MATERIAL </th>
                                        <th width="10%"></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PROFILE CONTENT -->
    </div>
</div>

<div id="modal-master-material" class="modal fade" data-width="760" data-backdrop="static" tabindex="-1">
    <div class="modal-header bg-red-thunderbird bg-font-red-thunderbird">
        <button type="button" class="close cancel" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">DATA MATERIAL</h4>
    </div>
    <form action="#" id="form_master_material" class="form-horizontal">
        <div class="form-body">
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button> Ada beberapa kolom yang belum terisi, silahkan cek kembali
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtmaterialid" class="form-control" />
                <div class="row" style="margin-bottom: -5px;">
                    <div class="form-group">
                        <label class="control-label col-md-3">Kode Material<span class="required"> * </span></label>
                        <div class="col-md-9" style="padding-right: 40px; !important;">
                            <input type="text" id="txtkodematerial" placeholder="Kode Material" maxlength="100" name="material" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom: -5px;">
                    <div class="form-group">
                        <label class="control-label col-md-3">Nama Material<span class="required"> * </span></label>
                        <div class="col-md-9" style="padding-right: 40px; !important;">
                            <input type="text" id="txtnamamaterial" placeholder="Nama Material" maxlength="100" name="material" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom: -5px;">
                    <div class="form-group">
                        <label class="control-label col-md-3">Tipe Material<span class="required"> * </span></label>
                        <div class="col-md-9" style="padding-right: 40px; !important;">
                            <input type="text" id="txttipematerial" placeholder="Tipe Material" maxlength="100" name="material" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-bottom: -5px;">
                    <div class="form-group">
                        <label class="control-label col-md-3">Bahan Material<span class="required"> * </span></label>
                        <div class="col-md-9" style="padding-right: 40px; !important;">
                            <input type="text" id="txtsubstancematerial" placeholder="Bahan Material" maxlength="100" name="material" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn cancel btn-outline dark">Batal</button>
                <button type="button" class="btn red-thunderbird" id="btn-add-material">Submit</button>
            </div>
        </div>
    </form>
</div>

<script src="~/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/assets/pages/scripts/form-validation-master.js" type="text/javascript"></script>

<script>
    $(document).ready(function () {

        // BEGIN OPEN ACTIVE MENU
        $('#master-menu').addClass('active ');
        $('#master-material-menu').addClass('active');


        /* INIT TABLE MASTER material */
        function initData() {

            var tableDocument =$('#table_material').DataTable({
                "bJQueryUI": true,
                "destroy": true,
                "bProcessing": true,
                "deferRender": true,
                "bFilter": true,
                "bInfo": true,
                "paging": true,
                "autoWidth": false,
                "ordering": false,
                "sAjaxSource": '/master/getlistmaterial',
                "sAjaxDataProp": "",
                "aoColumns": [
                    { "mDataProp": "m_material_id", "visible": false, "searchable": true, "targets": [0] },
                    { "mDataProp": "m_material_code" },
                    { "mDataProp": "m_material_name" },
                    { "mDataProp": "m_material_type" },
                    { "mDataProp": "m_substance" },
                    {
                        "mData": function (data, row) {
                            return '<a class="btn bg-red-thunderbird bg-font-red-thunderbird edit-status-material" href="javascript:;">EDIT</a>' +
                            '<a class="btn bg-red-thunderbird bg-font-red-thunderbird delete-status-material" href="javascript:;">HAPUS</a>' ;
                        }
                    }
                ]
            });

        };


        initData();


        /* BTN MODAL MASTER material */
        $(document).on('click', '#btn-add-material-modal', function (e) {

            $('#form_master_material')[0].reset();
            $('#txtmaterialId').val('');
            $('#form_master_material .form-control').val('');
            $('.has-error').removeClass('has-error');
            $('.fa-warning').removeClass('fa-warning');
            $('.has-success').removeClass('has-success');
            $('.fa-check').removeClass('fa-check');
            $('.alert-danger').hide();
            $('#modal-master-material').modal('show');

        });


        /* SAVE MASTER material */
        function savematerial() {

            var materi = new FormData();
            materi.append('m_material_code', $('#txtkodematerial').val());
            materi.append('m_material_name', $('#txtnamamaterial').val());
            materi.append('m_material_type', $('#txttipematerial').val());
            materi.append('m_substance', $('#txtsubstancematerial').val());
            materi.append('status', 'ACTIVE');
            materi.append("m_material_id", $('#txtmaterialid').val());

            // DO POST
            $.ajax({
                type: "POST",
                url: "/master/savematerial",
                data: materi,
                contentType: false,
                processData: false,
                success: function (result) {
                    App.unblockUI();
                    $('#form_master_material')[0].reset();
                    $('#txtmaterialid').val('');
                    $('#form_master_material .form-control').val('');
                    $('.has-error').removeClass('has-error');
                    $('.fa-warning').removeClass('fa-warning');
                    $('.has-success').removeClass('has-success');
                    $('.fa-check').removeClass('fa-check');
                    $('.alert-danger').hide();
                    $('#modal-master-material').modal('hide');
                    if (result == "timeout") {
                        swal({
                            title: "Session Habis!",
                            text: "Waktu Session Login Anda Berakhir",
                            type: "warning"
                        }, function () {
                            window.location.href = "/home/signout"
                        });
                    }
                    if (result == true) {
                        swal({
                            title: "Berhasil!",
                            text: "Data Berhasil Disimpan",
                            type: "success"
                        }, function () {
                            initData();
                        });
                    }
                    if (result == false) {
                        swal({
                            title: "Gagal!",
                            text: "Ada Kesalahan Penyimpanan Data",
                            type: "warning"
                        }, function () {
                            initData();
                        });
                    }

                    console.log(result);

                },
                error: function (e) {
                    App.unblockUI();
                    swal("Error!", "Periksa Kembali Koneksi Anda", "error");
                    console.log("ERROR: ", e);
                }
            });

        }



        /* CONFIRM SAVE MASTER material */
        function confirmSavematerial() {
            swal({
                title: "Konfirmasi Data",
                text: "Apa Anda Yakin Data Ingin Disimpan ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ya, Simpan!",
                cancelButtonText: "Tidak, Batalkan Proses!",
                showLoaderOnConfirm: true,
                closeOnConfirm: false,
                closeOnCancel: false
            }, function (isConfirm) {
                if (isConfirm) {

                    App.blockUI({
                        boxed: true
                    });

                    savematerial();

                } else {
                    App.unblockUI();
                    swal("Batal","Data Tidak Jadi Disimpan", "error");
                }
            });
        }


        /* CONFIRM EDIT STATUS MASTER material */
        function confirmEditStatusmaterial(id) {
            swal({
                title: "Konfirmasi Data",
                text: "Apa Anda Yakin Status Ingin Diubah ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ya, Ubah!",
                cancelButtonText: "Tidak, Batalkan Proses!",
                showLoaderOnConfirm: true,
                closeOnConfirm: false,
                closeOnCancel: false
            }, function (isConfirm) {
                if (isConfirm) {

                    App.blockUI({
                        boxed: true
                    });

                    editStatusmaterial(id);

                } else {
                    App.unblockUI();
                    swal("Batal","Status Tidak Jadi Diubah", "error");
                }
            });
        }


        /* BTN SUBMIT MASTER material */
        $(document).on("click", "#btn-add-material", function (e) {

            if ($('#form_master_material').validate().form()) {
                App.blockUI({
                    boxed: true
                });

               confirmSavematerial();

            }

        });

         /* BTN EDIT STATUS MASTER material */
        $(document).on("click", ".edit-status-material", function (e) {
            var oTable = $('#table_material').dataTable();
            var id = oTable.fnGetData($(this).parent().parent(), 0);

            App.blockUI({
                boxed: true
            });

            getDetailmaterial(id);

        });


        /* BTN DELETE MASTER material */
        $(document).on("click", ".delete-status-material", function (e) {
            var oTable = $('#table_material').dataTable();
            var id = oTable.fnGetData($(this).parent().parent(), 0);

            App.blockUI({
                boxed: true
            });

            confirmDeletematerial(id);

        });


        /* GET DETAIL MASTER material */
        function getDetailmaterial(id) {
            $.ajax({
                type: "GET",
                url: "/master/getdetailmaterial/" + id,
                success: function (result) {
                    $('#txtmaterialid').val(result.m_material_id);
                    $('#txtkodematerial').val(result.m_material_code);
                    $('#txtnamamaterial').val(result.m_material_name);
                    $('#txttipematerial').val(result.m_material_type);
                    $('#txtsubstancematerial').val(result.m_substance);
                    $('#btn-add-material').text('Ubah');
                    $('#modal-master-material').modal('show');

                    App.unblockUI();
                },
                error: function (e) {
                    swal("Error!", "", "error");
                }
            });

        }


        /* DELETE MASTER material */
        function deletematerial(id) {
            $.ajax({
                type: "POST",
                url: "/master/deletematerial/" + id,
                success: function (result) {
                    App.unblockUI();
                    if (result == "timeout") {
                        swal({
                            title: "Session Habis!",
                            text: "Waktu Session Login Anda Berakhir",
                            type: "warning"
                        }, function () {
                            window.location.href = "/home/signout"
                        });
                    }
                    if (result == true) {
                        swal({
                            title: "Berhasil!",
                            text: "Data Berhasil Dihapus",
                            type: "success"
                        }, function () {
                            initData();
                        });
                    }
                    if (result == false) {
                        swal({
                            title: "Gagal!",
                            text: "Ada Kesalahan Penyimpanan Data",
                            type: "warning"
                        }, function () {
                            initData();
                        });
                    }
                },
                error: function (e) {
                    App.unblockUI();
                    swal("Error!", "", "error");
                }
            });
        }


        /* CONFIRM DELETE MASTER material */
        function confirmDeletematerial(id) {
            swal({
                title: "Konfirmasi Data",
                text: "Apa Anda Yakin Data Ingin Dihapus ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Ya, Hapus!",
                cancelButtonText: "Tidak, Batalkan Proses!",
                showLoaderOnConfirm: true,
                closeOnConfirm: false,
                closeOnCancel: false
            }, function (isConfirm) {
                if (isConfirm) {

                    App.blockUI({
                        boxed: true
                    });

                    deletematerial(id);

                } else {
                     App.unblockUI();
                    swal("Batal!", "Data Tidak Jadi Dihapus", "error");
                }
            });
        }

    });
</script>