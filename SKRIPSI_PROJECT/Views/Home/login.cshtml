    <script>
            $(document).ready(function()
            {

                /* submit registration */
                $(document).on("click", "#btn-login", function (e) {

                    App.blockUI({
                        boxed: true
                    });

                    login();

                });

                $(document).on('keydown', function (e) {
                    var key = e.which;

                    if (key == 13) {
                        $("#btn-login").click();
                    }
                });

                /* submit registration */
                function login() {

                    var u = {
                        u_name: $("#txtUsername").val(),
                        u_password: $("#txtPassword").val()
                    }

                    // DO POST
                    $.ajax({
                        type: "POST",
                        contentType: "application/json",
                        url: "../home/signin",
                        data: JSON.stringify(u),
                        dataType: 'json',
                        success: function (result) {
                            if (result == 'Error') {
                                swal({
                                    title: "Gagal!",
                                    text: "Terjadi kesalahan fungsi sistem",
                                    type: "error"
                                }, function () {
                                    window.location = "../home/signout";
                                });
                            }

                            if (result == 'Unregistered') {
                                swal({
                                    title: "Gagal!",
                                    text: "Anda belum terdaftar dalam sistem",
                                    type: "warning"
                                }, function () {
                                    window.location = "../home/signout";
                                });
                            }

                            if (result == true) {
                                window.location = "../home/index";
                            }

                            if (result == false) {
                                swal({
                                    title: "Gagal!",
                                    text: "Username dan Password anda tidak sah",
                                    type: "warning"
                                }, function () {
                                    window.location = "../home/signout";
                                });
                            }

                            console.log(result);
                        },
                        error: function (e) {
                            swal("Error!", "Periksa Kembali Koneksi Anda", "error");
                            console.log("ERROR: ", e);
                            App.unblockUI();
                        }
                    });

                }
            })
